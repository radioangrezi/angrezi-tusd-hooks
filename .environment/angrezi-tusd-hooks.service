[Unit]
Description=Angrezi hooks for tusd upload server

[Service]
Type=simple
EnvironmentFile=/var/angrezi/angrezi-tusd-hooks/.env
ExecStart=/usr/bin/node /var/angrezi/angrezi-tusd-hooks/index.js --port 3002
WorkingDirectory=/media/storage/share/upload/
User=root

TimeoutStopSec=10
Restart=on-failure
RestartSec=5

User=angrezi
Group=angrezi

[Install]
WantedBy=default.target
